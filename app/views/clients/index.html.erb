<h1>Listing clients</h1>

<table>
  <thead>
    <tr>
      <th>Initial storage date</th>
      <th>Gigabytes</th>
      <th>Case name</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.initial_storage_date %></td>
        <td><%= client.gigabytes %></td>
        <td><%= client.case_name %></td>
        <td><%= client.active %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

